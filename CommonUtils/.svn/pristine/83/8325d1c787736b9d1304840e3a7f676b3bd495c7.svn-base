package com.het.common.constant;

import java.io.File;

import android.os.Environment;

public class CommonConstant {
	
	/**
	 * App信息的Preferences名称.
	 */
	public static final String APP_PREFERENCE = "app";

	/**
	 * App渠道对应的meta名字
	 */
	public static final String APP_SOURCE = "AppSource";

	/**
	 * 存储卡的路径.
	 */
	public static final String STORAGE_PATH = Environment
			.getExternalStorageDirectory().getPath();

	/**
	 * SD卡上保存数据的目录名.
	 */
	public static final String APP_DIR_NAME = "Het";

	/**
	 * 保存日志的目录名.
	 */
	public static final String LOGS_DIR_NAME = "Logs";

	/**
	 * 公共日志的目录名.
	 */
	public static final String COMMON_LOGS_DIR_NAME = "Common";

	/**
	 * 保存图片的目录名.
	 */
	public static final String IMAGES_DIR_NAME = "Images";

	/**
	 * 保存头像图片的目录名.
	 */
	public static final String AVATAR_DIR_NAME = "Avatar";

	/**
	 * 日志目录的路径
	 */
	public static final String LOG_DIR = STORAGE_PATH + File.separator
			+ APP_DIR_NAME + File.separator + LOGS_DIR_NAME;

	/**
	 * 头像目录的路径
	 */
	public static final String AVATAR_DIR = STORAGE_PATH
			+ File.separator + APP_DIR_NAME + File.separator
			+ IMAGES_DIR_NAME + File.separator + AVATAR_DIR_NAME;

	/**
	 * 头像临时文件名
	 */
	public static final String AVATAR_TEMP_NAME = "temp.jpg";

}
